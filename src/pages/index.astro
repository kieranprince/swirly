					transform: scale(1.01) rotate(1deg);
				}
				100% {
					transform: scale(1) rotate(0deg);
				}
			}

			@keyframes water-refill {
				0% {
					height: 15%;
					transform: scale(0.3);
				}
				50% {
					height: 40%;
					transform: scale(0.7);
				}
				100% {
					height: 70%;
					transform: scale(1);
				}
			}

			@keyframes water-shrink-to-hole {
				0% {
					transform: scale(1);
					border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
				}
				80% {
					transform: scale(0.18) translateY(-50px);
					border-radius: 50%;
				}
				100% {
					transform: scale(0.18) translateY(-50px);
					border-radius: 50%;
				}
			}

			@keyframes bubble-float-gentle {
				0% {
					bottom: 0;
					opacity: 0.4;
					transform: translateX(0px) scale(1);
				}
				50% {
					opacity: 0.6;
					transform: translateX(10px) scale(1.1);
				}
				100% {
					bottom: 100%;
					opacity: 0;
					transform: translateX(-5px) scale(0.9);
				}
			}

			@keyframes bubble-float-intense {
				0% {
					bottom: 0;
					opacity: 0.8;
					transform: translateX(0px) scale(1);
				}
				25% {
					opacity: 1;
					transform: translateX(30px) scale(1.3);
				}
				50% {
					opacity: 1;
					transform: translateX(-20px) scale(1.5);
				}
				75% {
					opacity: 0.8;
					transform: translateX(15px) scale(1.2);
				}
				100% {
					bottom: 100%;
					opacity: 0;
					transform: translateX(-10px) scale(0.8);
				}
			}

			@keyframes flush-text {
				0%,
				100% {
					transform: scale(1);
				}
				50% {
					transform: scale(1.1);
				}
			}

			@keyframes pulse {
				0% {
					transform: scale(1);
				}
				100% {
					transform: scale(1.05);
				}
			}

			@keyframes splash {
				0%,
				100% {
					transform: translateY(0px);
				}
				25% {
					transform: translateY(-5px);
				}
				50% {
					transform: translateY(2px);
				}
				75% {
					transform: translateY(-2px);
				}
			}

