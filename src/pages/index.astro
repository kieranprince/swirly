			}

			@keyframes spin-flush-reverse {
				0% {
					transform: rotate(0deg);
				}
				100% {
					transform: rotate(-360deg);
				}
			}

			@keyframes water-turbulence {
				0% {
					transform: scale(1) rotate(0deg);
				}
				25% {
					transform: scale(1.02) rotate(2deg);
				}
				50% {
					transform: scale(0.98) rotate(-2deg);
				}
