			.drain-hole {
				position: absolute;
				bottom: 60px;
				left: 50%;
				transform: translateX(-50%);
				width: 35px;
				height: 35px;
				background: radial-gradient(circle, #555 0%, #666 30%, #777 60%, #888 100%);
