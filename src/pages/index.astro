				0% {
					transform: rotate(0deg);
				}
				100% {
					transform: rotate(360deg);
				}
			}

			@keyframes spin-gentle-reverse {
				0% {
					transform: rotate(0deg);
				}
				100% {
					transform: rotate(-360deg);
				}
			}

			@keyframes spin-flush {
				0% {
					transform: rotate(0deg);
				}
				100% {
					transform: rotate(360deg);
